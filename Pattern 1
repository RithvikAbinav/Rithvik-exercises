Print Numbers in pattern







#include<iostream>
using namespace std;
int main()
{
    int n,i,j;
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            cout<<j<<" ";
        }
        cout<<endl;
    }
    for(i=n;i>0;i--)
    {
        for(j=1;j<=i-1;j++)
        {
            cout<<j<<" ";
        }
        cout<<endl;
    }
}
